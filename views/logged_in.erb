<!doctype html>
<html>
<head>
  <meta charset="UTF-8">

  <title></title>

  <link rel="stylesheet" type="text/css" href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css">

  <link href="/style_sheet.css" rel="stylesheet" />

</head>

<body>

  <div class="wrapper">

    <section class="clearfix">

      <article class="one_fourth">
      </article>

      <article class="one_half">
        <h1>Welcome, <%= name %></h1>
        <form method="post" action="/signout">
          <button id="logout_button">Logout</button>
        </form>
      </article>

      <article class="one_fourth">
      </article>

    </section>
  </div>

  <div class="wrapper">

    <section class="clearfix">

      <article class="one_third">
        <h2>Fish:</h2>
        <ul><%= fish_list %></ul>
      </article>

      <article class="one_third">
        <h2 id="other_users">Other Users:</h2>
        <ul><%= user_list %></ul>
      </article>

      <article class="one_third">
        <h2>Create Fish:</h2>
        <form action="/fish/new" method="post">
          <label for="fish_name">Name of Fish</label><br>
          <input class="form_width" type="text" name="fish_name"><br>
          <label for="wikipedia">Fish's Wikipedia Page</label><br>
          <input class="form_width" type="text" name="wikipedia"><br>
          <button id="submit_button">Create Fish</button>
        </form>
      </article>

    </section>
  </div>

</body>

</html>